<body>
    <header class="mobile-hidden"><div>&nbsp</div></header>
    <header>
        <section class="top">
            <img src="~/img/8.svg" alt="contact icon" class="contact-icon">
            <a href="tel:+420777666555" class="phone-number">
                <span class="phone-prefix">+420 </span>777 666 555
            </a>
            <p class="divider">|</p>
            <a href="mailto:info@nejlepsiboty.cz" class="mail">info@nejlepsiboty.cz</a>
            <img src="~/img/profile-user.svg" alt="profile icon" class="profile-icon">
            <a href="" class="sign-in">Přihlásit se</a>
        </section>

        <aside>
            <header>
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/img/Group%204.svg" alt="Boty logo" class="boty-logo">
                </a>
                <div class="search-input">
                    <img src="~/img/loupe.svg" height="16" alt="search icon">
                    <form action="search.php" id="search-form">
                        <input type="search" name="search" placeholder="Vyhledat zboží..." class="search-input">
                    </form>
                    <script>
                        const node = document.getElementsByClassName("search-input")[0];
                        node.addEventListener("keyup", ({key}) => {
                            if (key === "Enter") {
                                document.getElementById("search-form").submit();
                            }
                        })
                    </script>
                </div>
                <img src="~/img/loupe.svg" alt="search icon" class="search-icon">
                <a href="DemandIndex.html">
                    <img src="~/img/Group%206.png" alt="basket icon" class="basket-icon">
                </a>
                <img src="~/img/heart.svg" alt="favorite icon" class="fav-icon">
            </header>
            <nav>
                <a href="">
                    <div>
                        Chlapecké
                        <img src="~/img/Group%20169.svg" alt="man icon" class="man-icon">
                    </div>
                </a>
                <a href="">
                    <div>
                        Dívčí
                        <img src="~/img/Group%20171.svg" alt="man icon" class="woman-icon">
                    </div>
                </a>
                <a href=""><div>Doplňky</div></a>
                <a href=""><div>Ostatní</div></a>
                <a href=""><div class="contact">Kontakt</div></a>
            </nav>
        </aside>
    </header>
    <header class="mobile-hidden"><div>&nbsp</div></header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    
    <footer>
        <section class="subscribtion">
            <form action="newsletter.php">
                <h2>Nezmeškejte nové výhodné akce</h2>
                <p>Zadejte svůj e-mail a obratem vám zašleme PDF s inpirací zdarma.</p>
                <div>
                    <img src="~/img/6.svg" alt="e-mail icon">
                    <input type="email" name="email" placeholder="Zadej svůj mail..." required>
                    <button class="primary-button" type="submit">Přihlásit</button>

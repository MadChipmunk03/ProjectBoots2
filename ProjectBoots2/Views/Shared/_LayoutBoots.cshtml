                    </a>
                </div>
                <div>
                    <a href="tel:+420777666555">
                        <img src="~/img/8.svg" alt="phone icon">
                        +420 777 666 555
                    </a>
                </div>
                <div>
                    <a href=""><img src="~/img/facebook.png" alt="facebook icon"></a>
                    <a href=""><img src="~/img/Group%20153.svg" alt="instagram icon"></a>
                    <a href=""><img src="~/img/twitter.svg" alt="twitter icon"></a>
                </div>
                <address>
                    <a href="http://maps.google.com/?q=1200 Litvínovská 600, Praha 9, 190 00">
                        Litvínovská 600, Praha 9, 190 00
                    </a>
                </address>
            </div>
        </section>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" type="text/css" href="extensions/filter-control/bootstrap-table-filter-control.css">
    <script src="extensions/filter-control/bootstrap-table-filter-control.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
